          <div class="shopName">1. Coffee Emporium</div>
          <div class="shopAddress1stLine">110 E Central Pkwy</div>
          <div class="shopAddress2ndLine">Cincinnati, OH 45202</div>
          <div class="shopPhoneNumber">(513) 651-5483</div>
          
