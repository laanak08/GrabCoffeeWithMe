            <i class="fa fa-star-half-o fa-2x"></i>
            <i class="fa fa-star-o fa-2x"></i>
          <div>

          <div class="buttonCenter text-center">
            <button class="btn btn-lg option choose"><i class="fa fa-thumbs-o-up"></i> Meet Here</button>
            <button class="btn btn-lg option findNext">Find Next <i class="fa fa-thumbs-o-down"></i></button>
          </div>

        </div><!-- END autoSuggestLocation -->
